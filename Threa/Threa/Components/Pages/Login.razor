@page "/login"

@using GameMechanics.Player
@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Authentication.Cookies
@using System.Security.Claims

@inject Csla.Blazor.State.StateManager StateManager
@inject IHttpContextAccessor httpContextAccessor
@inject IDataPortal<UserValidation> portal
@inject NavigationManager NavigationManager

<PageTitle>Threa - Login</PageTitle>

<div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <h1 class="mb-4">Login</h1>
        
        <div class="card">
            <div class="card-body">
                @if (Registered)
                {
                    <div class="alert alert-success">Registration successful! Please log in with your new account.</div>
                }

                @if (PasswordReset)
                {
                    <div class="alert alert-success">Password reset successful! Please log in with your new password.</div>
                }

                @if (!string.IsNullOrEmpty(Message))
                {
                    <div class="alert alert-danger">@Message</div>
                }

                <EditForm Model="UserInfoModel" OnSubmit="LoginUser" FormName="loginform">
                    <div class="mb-3">
                        <label class="form-label">Username</label>
                        <InputText class="form-control" @bind-Value="UserInfoModel!.Username" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Password</label>
                        <InputText type="password" class="form-control" @bind-Value="UserInfoModel!.Password" />
                    </div>
                    <div class="d-grid gap-2 mb-3">
                        <button type="submit" class="btn btn-primary">Login</button>
                    </div>
                    <div class="text-center">
                        <p class="mb-2">
                            <a href="/register">Don't have an account? Register</a>
                        </p>
                        <p class="mb-0">
                            <a href="/forgot-password">Forgot password?</a>
                        </p>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
</div>

@code {
    [SupplyParameterFromQuery]
    public bool Registered { get; set; }

    [SupplyParameterFromQuery]
    public bool PasswordReset { get; set; }

    [SupplyParameterFromForm]
    public UserInfo? UserInfoModel { get; set; }

    protected override void OnInitialized()
    {
        UserInfoModel ??= new();
    }

    public string Message { get; set; } = "";

    private async Task LoginUser()
    {
        await StateManager.InitializeAsync();
        Message = "";
        try
        {
            var userValidation = await portal.ExecuteAsync(UserInfoModel!.Username, UserInfoModel.Password);
            if (userValidation != null &&
                userValidation.Principal != null &&
                userValidation.Principal.Identity != null &&
                userValidation.Principal.Identity.IsAuthenticated)
            {
                var httpContext = httpContextAccessor.HttpContext;
                if (httpContext is not null)
                {
                    AuthenticationProperties authProperties = new AuthenticationProperties();
                    await httpContext.SignInAsync(
                      CookieAuthenticationDefaults.AuthenticationScheme,
                      userValidation.Principal,
                      authProperties);
                    NavigationManager.NavigateTo("/");
                }
                else
                {
                    Message = "HttpContext is null";
                }
            }
            else
            {
                Message = "Invalid credentials";
            }
        }
        catch (DataPortalException ex)
        {
            Message = $"{ex.BusinessException.GetType().Name} {ex.BusinessExceptionMessage}";
        }
    }

    public class UserInfo
    {
        public string Username { get; set; } = string.Empty;
        public string Password { get; set; } = string.Empty;
    }
}
