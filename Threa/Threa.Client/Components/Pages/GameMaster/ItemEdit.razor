    private void UpdateRangedWeaponDamageModifiers()
    {
        var modifiers = new Dictionary<string, int>();
        if (rangedWeaponDamage.Bashing != 0) modifiers["Bashing"] = rangedWeaponDamage.Bashing;
        if (rangedWeaponDamage.Cutting != 0) modifiers["Cutting"] = rangedWeaponDamage.Cutting;
        if (rangedWeaponDamage.Piercing != 0) modifiers["Piercing"] = rangedWeaponDamage.Piercing;
        if (rangedWeaponDamage.Projectile != 0) modifiers["Projectile"] = rangedWeaponDamage.Projectile;
        if (rangedWeaponDamage.Energy != 0) modifiers["Energy"] = rangedWeaponDamage.Energy;

        rangedProps.DamageModifiers = modifiers.Count > 0 ? modifiers : null;
        // Also update legacy BaseSVModifier for backwards compat (max of all)
        rangedProps.BaseSVModifier = Math.Max(0, new[] {
            rangedWeaponDamage.Bashing, rangedWeaponDamage.Cutting,
            rangedWeaponDamage.Piercing, rangedWeaponDamage.Projectile,
            rangedWeaponDamage.Energy
        }.Max());
        UpdateCustomProperties();
    }

    private void UpdateAmmoDamageModifiers()
    {
        // Store per-type ammo damage modifiers into the ammo props
        var modifiers = new Dictionary<string, int>();
        if (ammoDamage.Bashing != 0) modifiers["Bashing"] = ammoDamage.Bashing;
        if (ammoDamage.Cutting != 0) modifiers["Cutting"] = ammoDamage.Cutting;
        if (ammoDamage.Piercing != 0) modifiers["Piercing"] = ammoDamage.Piercing;
        if (ammoDamage.Projectile != 0) modifiers["Projectile"] = ammoDamage.Projectile;
        if (ammoDamage.Energy != 0) modifiers["Energy"] = ammoDamage.Energy;

        ammoProps.DamageModifiers = modifiers.Count > 0 ? modifiers : null;
        // Also update legacy DamageModifier for backwards compat (sum of all)
        ammoProps.DamageModifier = ammoDamage.Bashing + ammoDamage.Cutting + ammoDamage.Piercing + ammoDamage.Projectile + ammoDamage.Energy;
        UpdateAmmoProperties();
    }

    private void UpdateAmmoContainerProperties()
    {
        if (vm.Model == null) return;
        ammoContainerProps.IsAmmoContainer = true;
        vm.Model.CustomProperties = JsonSerializer.Serialize(ammoContainerProps, new JsonSerializerOptions
        {
            WriteIndented = false,
            DefaultIgnoreCondition = System.Text.Json.Serialization.JsonIgnoreCondition.WhenWritingNull
        });
    }

