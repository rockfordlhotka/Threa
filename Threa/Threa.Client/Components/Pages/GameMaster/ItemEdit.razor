        // Also update legacy fields for backwards compat
        var profile = GameMechanics.Combat.WeaponDamageProfile.FromJson(vm.Model.WeaponDamage);
        if (profile != null && profile.HasDamage)
        {
            vm.Model.DamageType = profile.PrimaryDamageType.ToString();
            vm.Model.SVModifier = profile.PrimarySVModifier;
        }
        else
        {
            vm.Model.DamageType = string.Empty;
            vm.Model.SVModifier = 0;
