@page "/gamemaster/npcs/archive"

@rendermode InteractiveServer

@attribute [Authorize(Roles = "GameMaster,Administrator")]

@using Microsoft.AspNetCore.Authorization
@using Threa.Dal
@using Threa.Dal.Dto

@inject ICharacterDal CharacterDal
@inject ITableDal TableDal
@inject IDataPortal<GameMechanics.CharacterEdit> CharacterPortal
@inject NavigationManager Navigation

<PageTitle>NPC Archive - Threa</PageTitle>

<div class="container-fluid py-3">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="bi bi-archive me-2"></i>NPC Archive</h2>
            <p class="text-muted mb-0">Archived NPCs can be restored to any table.</p>
        </div>
        <a href="/gamemaster/templates" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Back to Templates
        </a>
    </div>

    @if (errorMessage != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="bi bi-exclamation-triangle me-1"></i>@errorMessage
            <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
        </div>
    }

    @if (successMessage != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle me-1"></i>@successMessage
            <button type="button" class="btn-close" @onclick="() => successMessage = null"></button>
        </div>
    }

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary"></div>
            <p class="mt-2 text-muted">Loading archived NPCs...</p>
        </div>
    }
    else if (archivedNpcs == null || !archivedNpcs.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-inbox fs-1 text-muted d-block mb-3"></i>
            <h4 class="text-muted">No Archived NPCs</h4>
            <p class="text-muted">NPCs you archive from tables will appear here.</p>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3">
            @foreach (var npc in archivedNpcs)
            {
                <div class="col">
                    <div class="card h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title mb-0">@npc.Name</h5>
                                <span class="badge @GetDispositionBadgeClass(npc.DefaultDisposition)">
                                    @npc.DefaultDisposition
                                </span>
                            </div>
                            <p class="card-text text-muted small mb-2">@npc.Species</p>
                            @if (!string.IsNullOrEmpty(npc.SourceTemplateName))
                            {
                                <small class="text-muted d-block mb-2">
                                    <i class="bi bi-diagram-3 me-1"></i>From: @npc.SourceTemplateName
                                </small>
                            }
                        </div>
                        <div class="card-footer d-flex gap-2">
                            <button class="btn btn-outline-primary btn-sm flex-grow-1"
                                    @onclick="() => ShowRestoreModal(npc)"
                                    disabled="@isProcessing">
                                <i class="bi bi-arrow-counterclockwise me-1"></i>Restore
                            </button>
                            <button class="btn btn-outline-danger btn-sm"
                                    @onclick="() => ConfirmDelete(npc)"
                                    disabled="@isProcessing"
                                    title="Delete permanently">
                                <i class="bi bi-trash"></i>
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@* Restore Modal - Select Table *@
@if (showRestoreModal && restoreNpc != null)
{
    <div class="modal fade show d-block" style="background-color: rgba(0,0,0,0.5);" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Restore @restoreNpc.Name</h5>
                    <button type="button" class="btn-close" @onclick="CloseRestoreModal"></button>
                </div>
                <div class="modal-body">
                    <p>Select a table to restore this NPC to:</p>
                    @if (availableTables == null)
                    {
                        <div class="text-center py-3">
                            <div class="spinner-border spinner-border-sm"></div>
                        </div>
                    }
                    else if (!availableTables.Any())
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle me-1"></i>
                            No tables available. Create a table first.
                        </div>
                    }
                    else
                    {
                        <div class="list-group">
                            @foreach (var table in availableTables)
                            {
                                <button type="button"
                                        class="list-group-item list-group-item-action @(selectedTableId == table.Id ? "active" : "")"
                                        @onclick="() => selectedTableId = table.Id">
                                    @table.Name
                                    <small class="d-block @(selectedTableId == table.Id ? "" : "text-muted")">@GetTableStatusDisplay(table.Status)</small>
                                </button>
                            }
                        </div>
                    }
                    <p class="text-muted small mt-3">
                        <i class="bi bi-info-circle me-1"></i>
                        The NPC will be restored in <strong>hidden</strong> state. You can reveal them when ready.
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseRestoreModal">Cancel</button>
                    <button type="button" class="btn btn-primary"
                            @onclick="ExecuteRestore"
                            disabled="@(selectedTableId == Guid.Empty || isProcessing)">
                        <i class="bi bi-arrow-counterclockwise me-1"></i>Restore to Table
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@* Delete Confirmation Modal *@
@if (showDeleteModal && deleteNpc != null)
{
    <div class="modal fade show d-block" style="background-color: rgba(0,0,0,0.5);" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">Delete @deleteNpc.Name</h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="CloseDeleteModal"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to <strong>permanently delete</strong> <strong>@deleteNpc.Name</strong>?</p>
                    <p class="text-danger small">
                        <i class="bi bi-exclamation-triangle me-1"></i>
                        This cannot be undone. The NPC will be gone forever.
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseDeleteModal">Cancel</button>
                    <button type="button" class="btn btn-danger" @onclick="ExecuteDelete" disabled="@isProcessing">
                        <i class="bi bi-trash me-1"></i>Delete Forever
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<Character>? archivedNpcs;
    private List<GameTable>? availableTables;
    private bool isLoading = true;
    private bool isProcessing;
    private string? errorMessage;
    private string? successMessage;

    // Restore modal state
    private bool showRestoreModal;
    private Character? restoreNpc;
    private Guid selectedTableId;

    // Delete modal state
    private bool showDeleteModal;
    private Character? deleteNpc;

    protected override async Task OnInitializedAsync()
    {
        await LoadArchivedNpcs();
    }

    private async Task LoadArchivedNpcs()
    {
        isLoading = true;
        try
        {
            archivedNpcs = await CharacterDal.GetArchivedNpcsAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load archive: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task ShowRestoreModal(Character npc)
    {
        restoreNpc = npc;
        selectedTableId = Guid.Empty;
        showRestoreModal = true;

        // Load available tables
        try
        {
            availableTables = await TableDal.GetActiveTablesAsync();
        }
        catch
        {
            availableTables = new List<GameTable>();
        }
    }

    private void CloseRestoreModal()
    {
        showRestoreModal = false;
        restoreNpc = null;
        availableTables = null;
    }

    private async Task ExecuteRestore()
    {
        if (restoreNpc == null || selectedTableId == Guid.Empty) return;
        isProcessing = true;

        try
        {
            // 1. Load character via portal for updating
            var character = await CharacterPortal.FetchAsync(restoreNpc.Id);

            // 2. Clear archive flag and set hidden (per CONTEXT.md)
            character.IsArchived = false;
            character.VisibleToPlayers = false; // Restored NPCs return hidden

            // 3. Save character
            await CharacterPortal.UpdateAsync(character);

            // 4. Attach to selected table
            var tableChar = new TableCharacter
            {
                TableId = selectedTableId,
                CharacterId = restoreNpc.Id,
                PlayerId = restoreNpc.PlayerId,
                JoinedAt = DateTime.UtcNow,
                ConnectionStatus = ConnectionStatus.Connected
            };
            await TableDal.AddCharacterToTableAsync(tableChar);

            successMessage = $"Restored {restoreNpc.Name} to table (hidden state)";
            CloseRestoreModal();
            await LoadArchivedNpcs();
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to restore: {ex.Message}";
        }
        finally
        {
            isProcessing = false;
        }
    }

    private void ConfirmDelete(Character npc)
    {
        deleteNpc = npc;
        showDeleteModal = true;
    }

    private void CloseDeleteModal()
    {
        showDeleteModal = false;
        deleteNpc = null;
    }

    private async Task ExecuteDelete()
    {
        if (deleteNpc == null) return;
        isProcessing = true;

        try
        {
            await CharacterDal.DeleteCharacterAsync(deleteNpc.Id);
            successMessage = $"Deleted {deleteNpc.Name} permanently";
            CloseDeleteModal();
            await LoadArchivedNpcs();
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to delete: {ex.Message}";
        }
        finally
        {
            isProcessing = false;
        }
    }

    private string GetDispositionBadgeClass(NpcDisposition disposition) => disposition switch
    {
        NpcDisposition.Hostile => "bg-danger",
        NpcDisposition.Neutral => "bg-secondary",
        NpcDisposition.Friendly => "bg-success",
        _ => "bg-secondary"
    };

    private string GetTableStatusDisplay(TableStatus status) => status switch
    {
        TableStatus.Lobby => "In Lobby",
        TableStatus.Active => "Active",
        TableStatus.Paused => "Paused",
        TableStatus.Ended => "Ended",
        _ => "Unknown"
    };
}
