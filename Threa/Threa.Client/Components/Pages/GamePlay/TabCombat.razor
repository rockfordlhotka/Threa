    private TargetingAttackerData BuildAttackerData(TargetingActionType actionType)
    {
        if (Character == null)
        {
            return new TargetingAttackerData { ActionType = actionType };
        }

        // Find the appropriate skill and weapon info
        GameMechanics.SkillEdit? skill = null;
        int weaponAV = 0;
        int weaponSV = 0;
        int weaponDC = 1;
        string? weaponName = null;
        DamageType damageType = DamageType.Bashing;
        bool isDodgeable = false;
        int currentAmmo = 0;

        if (actionType == TargetingActionType.RangedAttack && rangedWeapons.Any())
        {
            var weapon = rangedWeapons.First();
            skill = Character.Skills.FirstOrDefault(s => s.Id.Equals(weapon.SkillName, StringComparison.OrdinalIgnoreCase));
            weaponAV = weapon.WeaponAVModifier;
            weaponSV = weapon.BaseSV;
            weaponDC = 1; // Default damage class for ranged
            weaponName = weapon.Name;
            isDodgeable = weapon.IsDodgeable;
            currentAmmo = weapon.LoadedAmmo;
        }
        else if (actionType == TargetingActionType.MeleeAttack)
        {
            skill = attackSkills.FirstOrDefault();
            weaponAV = meleeWeaponAVModifier;
            weaponSV = meleeWeaponSVModifier;
            weaponDC = meleeWeaponDamageClass;

            // Get weapon name from equipped items
            var mainHand = equippedItems.FirstOrDefault(i => i.EquippedSlot == EquipmentSlot.MainHand);
            weaponName = mainHand?.Template?.Name ?? "Unarmed";
        }
        else if (actionType == TargetingActionType.Medical)
        {
            // Find medical skills
            var medicalSkillNames = new[] { "First-Aid", "First Aid", "Nursing", "Doctor", "Medicine" };
            skill = Character.Skills.FirstOrDefault(s =>
                medicalSkillNames.Any(name => s.Name.Equals(name, StringComparison.OrdinalIgnoreCase)));
        }

        return new TargetingAttackerData
        {
            ActionType = actionType,
            SkillId = skill?.Id ?? "",
            SkillName = skill?.Name ?? "",
            SkillAS = skill?.AbilityScore ?? 0,
            WeaponAVModifier = weaponAV,
            WeaponSVModifier = weaponSV,
            WeaponDamageClass = weaponDC,
            WeaponName = weaponName,
            DamageType = damageType,
            IsDodgeable = isDodgeable,
            CurrentLoadedAmmo = currentAmmo,
            UsePhysicality = actionType == TargetingActionType.MeleeAttack
        };
    }

