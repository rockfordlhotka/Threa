@using GameMechanics.Actions
@using GameMechanics.Messaging
@using GameMechanics.Effects.Behaviors
@using GameMechanics.Combat
@using GameMechanics.Items
@using Threa.Dal.Dto
@using Threa.Dal
@using Threa.Client.Components.Shared
@using Threa.Client.Components.Pages.GamePlay.Targeting

@using GameMechanics.Effects

@inject ICharacterItemDal CharacterItemDal
@inject IItemTemplateDal ItemTemplateDal
@inject IActivityLogService ActivityLog
@inject Radzen.DialogService DialogService
@inject ItemEffectService ImplantEffectService

<div class="combat-tab-container">
    @if (combatMode == CombatMode.Default)
    {
        <!-- Default Mode: Main combat actions and skill list -->
        <div class="row">
            <!-- Combat Skills Column -->
            <div class="col-md-7">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <strong><i class="bi bi-list-ul"></i> Combat Skills</strong>
                        @if (Table?.IsInCombat == true)
                        {
                            <span class="badge bg-danger">Round @Table.CurrentRound</span>
                        }
                    </div>
                    <div class="card-body" style="max-height: 400px; overflow-y: auto;">
                        @if (filteredSkills == null)
                        {
                            <p class="text-muted"><em>Loading skills...</em></p>
                        }
                        else if (!filteredSkills.Any())
                        {
                            <p class="text-muted"><em>No combat skills available. Equip a weapon to see weapon skills.</em></p>
                        }
                        else
                        {
                            @foreach (var group in GetGroupedSkills())
                            {
                                <div class="mb-3">
                                    <h6 class="text-muted border-bottom pb-1 mb-2">
                                        <i class="bi @GetSkillGroupIcon(group.Key)"></i> @group.Key
                                    </h6>
                                    <div class="d-flex flex-column gap-1">
                                        @foreach (var skill in group)
                                        {
                                            <SkillRow SkillName="@skill.Name"
                                                      Level="@skill.Level"
                                                      AbilityScore="@skill.AbilityScore"
                                                      PrimaryAttribute="@skill.PrimaryAttribute"
                                                      OnUse="@(() => StartAttackWithSkill(skill))"
                                                      CanUse="@(CanAct() && skill.CanUse)"
                                                      DisabledReason="@skill.CannotUseReason" />
                                        }
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>

            <!-- Action Buttons Column -->
            <div class="col-md-5">
                <div class="d-grid gap-3">
                    <!-- Attack Button -->
                    @if (HasTargetsAvailable())
                    {
                        <div class="btn-group w-100" role="group">
                            <button class="btn btn-lg btn-danger py-3 flex-grow-1"
                                    @onclick="StartAttack"
                                    disabled="@(!CanAct())">
                                <i class="bi bi-bullseye fs-4"></i>
                                <div class="fw-bold">ATTACK</div>
                                <small class="opacity-75">Solo (1 AP + 1 FAT)</small>
                            </button>
                            <button class="btn btn-lg btn-outline-danger py-3"
                                    @onclick="() => StartTargetedAttack(TargetingActionType.MeleeAttack)"
                                    disabled="@(!CanAct())"
                                    title="Attack a target at your table">
                                <i class="bi bi-person-plus fs-4"></i>
                                <div class="small">Target</div>
                            </button>
                        </div>
                    }
                    else
                    {
                        <button class="btn btn-lg btn-danger py-3"
                                @onclick="StartAttack"
                                disabled="@(!CanAct())">
                            <i class="bi bi-bullseye fs-4"></i>
                            <div class="fw-bold">ATTACK</div>
                            <small class="opacity-75">1 AP + 1 FAT or 2 AP</small>
                        </button>
                    }

                    <!-- Ranged Attack Button -->
                    @if (hasRangedWeaponEquipped)
                    {
                        @if (HasTargetsAvailable())
                        {
                            <div class="btn-group w-100" role="group">
                                <button class="btn btn-lg btn-warning py-3 flex-grow-1"
                                        @onclick="StartRangedAttack"
                                        disabled="@(!CanAct())">
                                    <i class="bi bi-crosshair fs-4"></i>
                                    <div class="fw-bold">RANGED</div>
                                    <small class="opacity-75">@GetRangedAmmoDisplay()</small>
                                </button>
                                <button class="btn btn-lg btn-outline-warning py-3"
                                        @onclick="() => StartTargetedAttack(TargetingActionType.RangedAttack)"
                                        disabled="@(!CanAct())"
                                        title="Ranged attack on a target at your table">
                                    <i class="bi bi-person-plus fs-4"></i>
                                    <div class="small">Target</div>
                                </button>
                            </div>
                        }
                        else
                        {
                            <button class="btn btn-lg btn-warning py-3"
                                    @onclick="StartRangedAttack"
                                    disabled="@(!CanAct())">
                                <i class="bi bi-crosshair fs-4"></i>
                                <div class="fw-bold">RANGED ATTACK</div>
                                <small class="opacity-75">@GetRangedAmmoDisplay()</small>
                            </button>
                        }
                    }

                    <!-- Reload Button -->
                    @if (hasRangedWeaponEquipped)
                    {
                        <button class="btn btn-lg btn-success py-3"
                                @onclick="StartReload"
                                disabled="@(!CanAct())">
                            <i class="bi bi-box-arrow-in-down fs-4"></i>
                            <div class="fw-bold">RELOAD</div>
                            <small class="opacity-75">1 AP + 1 FAT or 2 AP</small>
                        </button>
                    }

                    <!-- Unload Button -->
                    @if (HasWeaponWithAmmo())
                    {
                        <button class="btn btn-lg btn-outline-warning py-3"
                                @onclick="StartUnload"
                                disabled="@(!CanAct())">
                            <i class="bi bi-box-arrow-up fs-4"></i>
                            <div class="fw-bold">UNLOAD</div>
                            <small class="opacity-75">Remove ammo from weapon</small>
                        </button>
                    }

                    <!-- Defend Button -->
                    <button class="btn btn-lg btn-info py-3"
                            @onclick="StartDefend"
                            disabled="@(Character?.IsPassedOut ?? true)">
                        <i class="bi bi-shield-shaded fs-4"></i>
                        <div class="fw-bold">DEFEND</div>
                        <small class="opacity-75">Passive always available</small>
                    </button>

                    <!-- Medical Button -->
                    <button class="btn btn-lg btn-outline-success py-3"
                            @onclick="StartMedical"
                            disabled="@(!CanAct())">
                        <i class="bi bi-heart-pulse fs-4"></i>
                        <div class="fw-bold">MEDICAL</div>
                        <small class="opacity-75">First-Aid, Nursing, Doctor</small>
                    </button>

                    @if (hasToggleableImplantsEquipped)
                    {
                        <!-- Implants Button -->
                        <button class="btn btn-lg btn-outline-info py-3"
                                @onclick="StartActivateImplant">
                            <i class="bi bi-cpu fs-4"></i>
                            <div class="fw-bold">IMPLANTS</div>
                            <small class="opacity-75">Activate / Deactivate</small>
                        </button>
                    }

                    <!-- Rest Card -->
                    <div class="card">
                        <div class="card-body text-center">
                            <h6 class="card-title mb-2">
                                <i class="bi bi-cup-hot"></i> Rest
                            </h6>
                            <p class="card-text small text-muted mb-2">
                                Spend 1 AP to recover 1 FAT (added to pending healing).
                            </p>
                            <button class="btn btn-warning w-100"
                                    @onclick="Rest"
                                    disabled="@(!CanRest())">
                                <i class="bi bi-pause-circle"></i> Rest
                            </button>
                        </div>
                    </div>

                    <!-- Take Damage Card (for falls, spells, etc.) -->
                    <div class="card">
                        <div class="card-body text-center">
                            <h6 class="card-title mb-2">
                                <i class="bi bi-lightning-charge text-danger"></i> Take Damage
                            </h6>
                            <p class="card-text small text-muted mb-2">
                                Resolve damage from falls, spells, or other sources.
                            </p>
                            <button class="btn btn-outline-danger w-100"
                                    @onclick="StartTakeDamage">
                                <i class="bi bi-bandaid"></i> Take Damage
                            </button>
                        </div>
                    </div>

                    <!-- Resource Summary -->
                    <div class="card">
                        <div class="card-body py-2">
                            <div class="row text-center">
                                <div class="col-4">
                                    <small class="text-muted">AP</small>
                                    <div class="fw-bold @(Character?.ActionPoints.Available <= 0 ? "text-danger" : "")">
                                        @Character?.ActionPoints.Available / @Character?.ActionPoints.Max
                                    </div>
                                </div>
                                <div class="col-4">
                                    <small class="text-muted">FAT</small>
                                    <div class="fw-bold @(Character?.Fatigue.Value <= 0 ? "text-danger" : "")">
                                        @Character?.Fatigue.Value / @Character?.Fatigue.BaseValue
                                    </div>
                                </div>
                                <div class="col-4">
                                    <small class="text-muted">VIT</small>
                                    <div class="fw-bold @(GetVitPercent() <= 25 ? "text-danger" : "")">
                                        @Character?.Vitality.Value / @Character?.Vitality.BaseValue
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else if (combatMode == CombatMode.Attack)
    {
        <AttackMode Character="Character"
                    Table="Table"
                    AvailableSkills="attackSkills"
                    SelectedSkill="selectedSkill"
                    WeaponAVModifier="meleeWeaponAVModifier"
                    WeaponSVModifier="meleeWeaponSVModifier"
                    WeaponDamageClass="meleeWeaponDamageClass"
                    OnCancel="ReturnToDefault"
                    OnAttackComplete="OnAttackComplete" />
    }
    else if (combatMode == CombatMode.Defend)
    {
        <DefendMode Character="Character"
                    Table="Table"
                    HasWeaponEquipped="hasWeaponEquipped"
                    HasShieldEquipped="hasShieldEquipped"
                    WeaponSkillAS="weaponSkillAS"
                    WeaponSkillName="weaponSkillName"
                    ShieldSkillAS="shieldSkillAS"
                    OnCancel="ReturnToDefault"
                    OnDefenseComplete="OnDefenseComplete"
                    OnHit="OnDefenseHit" />
    }
    else if (combatMode == CombatMode.TakeDamage)
    {
        <DamageResolution Character="Character"
                          Table="Table"
                          InitialSV="pendingDamageSV"
                          InitialDamageType="pendingDamageType"
                          InitialDamageClass="pendingDamageClass"
                          InitialShieldBlockSuccess="pendingShieldBlockSuccess"
                          InitialShieldBlockRV="pendingShieldBlockRV"
                          InitialCalledShotLocation="pendingCalledShotLocation"
                          EquippedItems="equippedItems"
                          ShieldSkillAS="shieldSkillAS"
                          ArmorSkillAS="armorSkillAS"
                          OnCancel="ReturnToDefault"
                          OnDamageComplete="OnDamageComplete" />
    }
    else if (combatMode == CombatMode.RangedAttack)
    {
        <RangedAttackMode Character="Character"
                          Table="Table"
                          AvailableWeapons="rangedWeapons"
                          OnCancel="ReturnToDefault"
                          OnAttackComplete="OnRangedAttackComplete" />
    }
    else if (combatMode == CombatMode.Reload)
    {
        <ReloadMode Character="Character"
                    Table="Table"
                    AvailableWeapons="rangedWeapons"
                    AvailableMagazines="availableAmmoSources"
                    OnCancel="ReturnToDefault"
                    OnReloadComplete="OnReloadComplete" />
    }
    else if (combatMode == CombatMode.Unload)
    {
        <UnloadMode Character="Character"
                    Table="Table"
                    AvailableWeapons="rangedWeapons"
                    OnCancel="ReturnToDefault"
                    OnUnloadComplete="OnUnloadComplete" />
    }
    else if (combatMode == CombatMode.Medical)
    {
        <MedicalMode Character="Character"
                     Table="Table"
                     OnCancel="ReturnToDefault"
                     OnMedicalComplete="OnMedicalComplete"
                     OnCharacterChanged="OnCharacterChanged" />
    }
    else if (combatMode == CombatMode.ActivateImplant)
    {
        <ActivateImplantMode Character="Character"
                             EquippedItems="equippedItems"
                             ImplantEffectService="ImplantEffectService"
                             OnComplete="OnActivateImplantComplete"
                             OnCharacterChanged="OnCharacterChanged" />
    }
    else if (combatMode == CombatMode.SelectTarget)
    {
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0">
                    <i class="bi bi-crosshair"></i> Select Target
                </h5>
            </div>
            <div class="card-body">
                <TargetSelectionModal ActionType="@pendingTargetingActionType"
                                      AvailableTargets="@AvailableTargets"
                                      ExcludeCharacterId="@(Character?.Id ?? 0)"
                                      OnTargetSelected="OnTargetSelected"
                                      OnCancel="ReturnToDefault" />
            </div>
        </div>
    }
</div>

@code {
    [Parameter]
    public GameMechanics.CharacterEdit? Character { get; set; }

    [Parameter]
    public GameMechanics.GamePlay.TableEdit? Table { get; set; }

    [Parameter]
    public EventCallback OnCharacterChanged { get; set; }

    [Parameter]
    public List<TargetSelectionModal.TargetInfo>? AvailableTargets { get; set; }

    [Parameter]
    public EventCallback<(TargetingActionType ActionType, int TargetId, string TargetName, TargetingAttackerData AttackerData)> OnInitiateTargeting { get; set; }

    private enum CombatMode { Default, Attack, Defend, TakeDamage, RangedAttack, Reload, Unload, Medical, SelectTarget, ActivateImplant }
    private CombatMode combatMode = CombatMode.Default;

    private List<GameMechanics.SkillEdit> filteredSkills = new();
    private List<GameMechanics.SkillEdit> attackSkills = new();
    private GameMechanics.SkillEdit? selectedSkill;
    private List<CharacterItem> equippedItems = new();

    // Equipment state
    private bool hasWeaponEquipped;
    private bool hasShieldEquipped;
    private bool hasRangedWeaponEquipped;
    private int weaponSkillAS;
    private int shieldSkillAS;
    private int armorSkillAS;
    private string weaponSkillName = "";
    private List<RangedWeaponInfo> rangedWeapons = new();
    private List<AmmoSourceInfo> availableAmmoSources = new();
    private bool hasToggleableImplantsEquipped;

    // Weapon modifiers for melee attacks (from equipped weapon template)
    private int meleeWeaponAVModifier;
    private int meleeWeaponSVModifier;
    private int meleeWeaponDamageClass = 1;

    // Pending damage state (from defense when hit)
    private int? pendingDamageSV;
    private DamageType? pendingDamageType;
    private int? pendingDamageClass;
    private bool? pendingShieldBlockSuccess;
    private int? pendingShieldBlockRV;
    private HitLocation? pendingCalledShotLocation;

    // Targeting state
    private TargetingActionType pendingTargetingActionType;

    protected override async Task OnInitializedAsync()
    {
        if (Character != null)
        {
            await LoadEquipmentAndSkills();
        }
    }

    protected override async Task OnParametersSetAsync()
    {
        if (Character != null && !filteredSkills.Any())
        {
            await LoadEquipmentAndSkills();
        }
    }

    private async Task LoadEquipmentAndSkills()
    {
        if (Character == null) return;

        equippedItems = await CharacterItemDal.GetEquippedItemsAsync(Character.Id);

        // Convert to EquippedItemInfo for weapon/armor filtering
        var equippedItemInfos = equippedItems
            .Where(i => i.Template != null)
            .Select(i => new EquippedItemInfo(i, i.Template!))
            .ToList();

        // Detect melee weapons using WeaponSelector
        var meleeWeapons = WeaponSelector.GetMeleeWeapons(equippedItemInfos).ToList();
        // Note: hasWeaponEquipped will be set after ranged weapons are detected (line ~365)

        // Extract first melee weapon's modifiers for attack mode
        var selectedMeleeWeapon = meleeWeapons.FirstOrDefault();
        meleeWeaponAVModifier = selectedMeleeWeapon?.Template.AVModifier ?? 0;
        meleeWeaponSVModifier = selectedMeleeWeapon?.Template.SVModifier ?? 0;
        meleeWeaponDamageClass = selectedMeleeWeapon?.Template.DamageClass ?? 1;

        // Detect shields
        var offHand = equippedItems.FirstOrDefault(i => i.EquippedSlot == EquipmentSlot.OffHand);
        hasShieldEquipped = offHand?.Template?.ItemType == ItemType.Shield;

        // Load ranged weapons using WeaponSelector
        rangedWeapons = new List<RangedWeaponInfo>();
        var detectedRangedWeapons = WeaponSelector.GetRangedWeapons(equippedItemInfos).ToList();
        foreach (var weaponInfo in detectedRangedWeapons)
        {
            var item = weaponInfo.Item;

            // Try to load advanced ranged properties (fire modes, ammo, etc.) from CustomProperties
            var rangedProps = RangedWeaponProperties.FromJson(item.Template?.CustomProperties);

            // If rangedProps exists, use it; otherwise create basic ranged weapon with defaults
            if (rangedProps != null || item.Template?.Range.HasValue == true)
            {
                var ammoState = WeaponAmmoState.FromJson(item.CustomProperties);
                // Use the ranged skill from weapon properties, fall back to RelatedSkill, then template RelatedSkill
                var skillName = !string.IsNullOrWhiteSpace(rangedProps?.RangedSkill)
                    ? rangedProps.RangedSkill
                    : item.Template?.RelatedSkill ?? "";
                var skill = Character.Skills.FirstOrDefault(s => s.Id.Equals(skillName, StringComparison.OrdinalIgnoreCase));

                // Check weapon's inherent AOE (grenades, rockets)
                bool isAOECapable = rangedProps?.IsInherentAOE ?? false;
                int blastRadius = rangedProps?.DefaultBlastRadius ?? 0;
                string? blastFalloff = rangedProps?.DefaultBlastFalloff;
                bool aoeFromAmmo = false;
                int directHitBonus = 0;

                // TODO: Look up loaded ammo template to check for ammo-provided AOE
                // For now, inherent AOE is supported; ammo AOE will be checked at attack time

                rangedWeapons.Add(new RangedWeaponInfo
                {
                    ItemId = item.Id,
                    Name = item.Template?.Name ?? "Unknown",
                    SkillName = skillName,
                    SkillAS = skill?.AbilityScore ?? 0,
                    WeaponAVModifier = rangedProps?.AccuracyModifier ?? weaponInfo.Template.AVModifier,
                    BaseSV = rangedProps?.BaseSVModifier ?? weaponInfo.Template.SVModifier,
                    LoadedAmmo = ammoState.LoadedAmmo,
                    Capacity = rangedProps?.Capacity ?? 0,
                    LoadedAmmoType = ammoState.LoadedAmmoType,
                    AcceptedAmmoType = rangedProps?.AmmoType,
                    ReloadType = rangedProps?.ReloadType ?? "Magazine",
                    AcceptsLooseAmmo = rangedProps?.AcceptsLooseAmmo ?? false,
                    LoadedMagazineId = ammoState.LoadedMagazineId,
                    AmmoDamageModifier = 0, // Will be calculated from loaded ammo type
                    IsDodgeable = rangedProps?.IsDodgeable ?? true,
                    SupportsSingle = rangedProps?.HasFireMode(FireMode.Single) ?? true,
                    SupportsBurst = rangedProps?.HasFireMode(FireMode.Burst) ?? false,
                    SupportsSuppression = rangedProps?.HasFireMode(FireMode.Suppression) ?? false,
                    BurstSize = rangedProps?.BurstSize ?? 3,
                    SuppressiveRounds = rangedProps?.SuppressiveRounds ?? 10,
                    IsAOECapable = isAOECapable,
                    BlastRadius = blastRadius,
                    BlastFalloff = blastFalloff,
                    AOEFromAmmo = aoeFromAmmo,
                    DirectHitBonus = directHitBonus,
                    ShortRange = rangedProps?.ShortRange ?? 10,
                    MediumRange = rangedProps?.MediumRange ?? 20,
                    LongRange = rangedProps?.LongRange ?? 40,
                    ExtremeRange = rangedProps?.ExtremeRange ?? 60
                });
            }
        }
        hasRangedWeaponEquipped = rangedWeapons.Any();

        // Set hasWeaponEquipped to true if EITHER melee or ranged weapons are equipped
        hasWeaponEquipped = meleeWeapons.Any() || rangedWeapons.Any();

        // Detect equipped implants with toggleable effects
        hasToggleableImplantsEquipped = equippedItems.Any(i =>
            i.EquippedSlot.IsImplant() &&
            i.Template?.ItemType == ItemType.Implant &&
            i.Template?.Effects?.Any(e => e.IsActive && e.IsToggleable) == true);

        // Get equipped weapon skill names (exclude shields from weapons, include implant weapons)
        var weaponItems = equippedItems
            .Where(i => i.EquippedSlot == EquipmentSlot.MainHand ||
                       i.EquippedSlot == EquipmentSlot.TwoHand ||
                       (i.EquippedSlot == EquipmentSlot.OffHand && i.Template?.ItemType != ItemType.Shield) ||
                       (i.EquippedSlot.IsImplant() && i.Template?.ItemType == ItemType.Implant && i.Template?.WeaponType != WeaponType.None))
            .ToList();

        // Collect skill names from both melee weapons (RelatedSkill) and ranged weapons (RangedSkill in CustomProperties)
        var equippedWeaponSkillNames = new HashSet<string>(StringComparer.OrdinalIgnoreCase);

        foreach (var item in weaponItems)
        {
            // Check melee weapon skill (RelatedSkill)
            var meleeSkill = item.Template?.RelatedSkill;

            // Check ranged weapon skill (in RangedWeaponProperties JSON)
            var rangedProps = RangedWeaponProperties.FromJson(item.Template?.CustomProperties);
            var rangedSkill = rangedProps?.RangedSkill;

            // Add both skills if they exist
            if (!string.IsNullOrWhiteSpace(meleeSkill))
                equippedWeaponSkillNames.Add(meleeSkill);
            if (!string.IsNullOrWhiteSpace(rangedSkill))
                equippedWeaponSkillNames.Add(rangedSkill);
        }

        var skills = Character.Skills.ToList();
        var result = new List<GameMechanics.SkillEdit>();
        attackSkills = new List<GameMechanics.SkillEdit>();

        foreach (var skill in skills)
        {
            var category = GetSkillCategory(skill);

            // Show skill if it matches an equipped weapon's RelatedSkill (compare against Id, not Name)
            if (equippedWeaponSkillNames.Contains(skill.Id))
            {
                result.Add(skill);
                attackSkills.Add(skill);

                // Track weapon skill AS and name for parry
                if (weaponSkillAS == 0)
                {
                    weaponSkillAS = skill.AbilityScore;
                    weaponSkillName = skill.Name;
                }
            }
            else if (category == "Weapon")
            {
                // Also include skills categorized as Weapon (ActionType.Attack) even if no matching equipment
                // This handles unarmed/improvised combat
                result.Add(skill);
                attackSkills.Add(skill);
            }
            else if (category == "Attribute")
            {
                result.Add(skill);

                // Physicality can be used for attacks (unarmed)
                if (skill.Name.Equals("Physicality", StringComparison.OrdinalIgnoreCase))
                {
                    attackSkills.Add(skill);
                }
            }
            else if (category == "Defense")
            {
                result.Add(skill);
            }
            else if (category == "Movement")
            {
                result.Add(skill);
            }
            else if (category == "Shield" && hasShieldEquipped)
            {
                result.Add(skill);
                shieldSkillAS = skill.AbilityScore;
            }
            else if (skill.Name.Equals("Armor", StringComparison.OrdinalIgnoreCase))
            {
                armorSkillAS = skill.AbilityScore;
            }
        }

        filteredSkills = result;
        await InvokeAsync(StateHasChanged);
    }

    private string GetSkillCategory(GameMechanics.SkillEdit skill)
    {
        if (skill.ActionType == ActionType.Attack) return "Weapon";

        return skill.Name.ToLower() switch
        {
            "physicality" => "Attribute",
            "dodge" => "Defense",
            "shield" or "shield block" => "Shield",
            "sprint" or "run" => "Movement",
            _ => "Other"
        };
    }

    private IEnumerable<IGrouping<string, GameMechanics.SkillEdit>> GetGroupedSkills()
    {
        return filteredSkills
            .GroupBy(s => GetSkillCategory(s))
            .OrderBy(g => GetCategoryOrder(g.Key));
    }

    private int GetCategoryOrder(string category) => category switch
    {
        "Weapon" => 0,
        "Defense" => 1,
        "Shield" => 2,
        "Attribute" => 3,
        "Movement" => 4,
        _ => 99
    };

    private string GetSkillGroupIcon(string category) => category switch
    {
        "Weapon" => "bi-bullseye",
        "Defense" => "bi-shield",
        "Shield" => "bi-shield-shaded",
        "Attribute" => "bi-person-arms-up",
        "Movement" => "bi-arrows-move",
        _ => "bi-star"
    };

    private void StartAttack()
    {
        // Attacking ends parry mode
        if (Character != null && CombatStanceBehavior.IsInParryMode(Character))
        {
            CombatStanceBehavior.EndParryMode(Character);
        }
        selectedSkill = attackSkills.FirstOrDefault();
        combatMode = CombatMode.Attack;
    }

    private void StartAttackWithSkill(GameMechanics.SkillEdit skill)
    {
        // Attacking ends parry mode
        if (Character != null && CombatStanceBehavior.IsInParryMode(Character))
        {
            CombatStanceBehavior.EndParryMode(Character);
        }
        selectedSkill = skill;

        // Check if this skill matches a ranged weapon
        var isRangedSkill = rangedWeapons.Any(w => w.SkillName.Equals(skill.Id, StringComparison.OrdinalIgnoreCase));

        // Route to ranged attack mode for ranged skills, melee attack mode otherwise
        combatMode = isRangedSkill ? CombatMode.RangedAttack : CombatMode.Attack;
    }

    private void StartDefend()
    {
        combatMode = CombatMode.Defend;
    }

    private void StartRangedAttack()
    {
        // Ranged attacking ends parry mode
        if (Character != null && CombatStanceBehavior.IsInParryMode(Character))
        {
            CombatStanceBehavior.EndParryMode(Character);
        }
        combatMode = CombatMode.RangedAttack;
    }

    private string GetRangedAmmoDisplay()
    {
        if (rangedWeapons.Count == 0) return "No ranged weapons";
        if (rangedWeapons.Count == 1)
        {
            var w = rangedWeapons[0];
            return $"{w.LoadedAmmo}/{w.Capacity} ammo loaded";
        }
        var total = rangedWeapons.Sum(w => w.LoadedAmmo);
        return $"{total} total ammo loaded";
    }

