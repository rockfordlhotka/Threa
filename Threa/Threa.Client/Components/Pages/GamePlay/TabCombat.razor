    private async Task LoadAvailableAmmoSources()
    {
        availableAmmoSources = new List<AmmoSourceInfo>();
        if (Character == null) return;

        // Get all items in character's inventory
        var allItems = await CharacterItemDal.GetCharacterItemsAsync(Character.Id);

        foreach (var item in allItems)
        {
            // Skip equipped ranged weapons (they're the targets, not sources)
            if (item.IsEquipped && rangedWeapons.Any(w => w.ItemId == item.Id))
                continue;

            // Check if this is ammunition - try CustomProperties first, then fall back to ItemType
            var ammoProps = AmmunitionProperties.FromJson(item.Template?.CustomProperties);

            // If no ammo props from CustomProperties but ItemType is Ammunition, 
            // try to extract basic info for display
            if (ammoProps == null && item.Template?.ItemType == ItemType.Ammunition)
            {
                // Item is marked as ammunition but doesn't have structured AmmunitionProperties
                // This can happen with older data or imports that didn't set isAmmunition
                // Try to parse just the ammoType from the JSON
                ammoProps = TryParseBasicAmmoProperties(item.Template.CustomProperties);
            }

            if (ammoProps != null)
            {
                if (ammoProps.IsContainer)
                {
                    // This is a magazine - get its current ammo state
                    var containerState = AmmoContainerState.FromJson(item.CustomProperties);
                    availableAmmoSources.Add(new AmmoSourceInfo
                    {
                        ItemId = item.Id,
                        Name = item.CustomName ?? item.Template?.Name ?? "Magazine",
                        AmmoType = ammoProps.AmmoType ?? "",
                        CurrentAmmo = containerState.LoadedAmmo,
                        Capacity = ammoProps.ContainerCapacity,
                        IsLooseAmmo = false,
                        DamageModifier = ammoProps.DamageModifier,
                        SpecialEffect = ammoProps.SpecialEffect
                    });
                }
                else
                {
                    // This is loose ammo - use stack size
                    availableAmmoSources.Add(new AmmoSourceInfo
                    {
                        ItemId = item.Id,
                        Name = item.CustomName ?? item.Template?.Name ?? "Ammo",
                        AmmoType = ammoProps.AmmoType ?? "",
                        CurrentAmmo = item.StackSize,
                        Capacity = 0,
                        IsLooseAmmo = true,
                        DamageModifier = ammoProps.DamageModifier,
                        SpecialEffect = ammoProps.SpecialEffect
                    });
                }
            }
        }
    }

    /// <summary>
    /// Attempts to parse basic ammo properties from JSON even if isAmmunition flag is not set.
    /// Used as fallback for older data or imports.
    /// </summary>
    private AmmunitionProperties? TryParseBasicAmmoProperties(string? json)
    {
        if (string.IsNullOrWhiteSpace(json))
            return null;

        try
        {
            // Force parse without the IsAmmunition check
            var props = System.Text.Json.JsonSerializer.Deserialize<AmmunitionProperties>(json);
            if (props != null && !string.IsNullOrEmpty(props.AmmoType))
            {
                props.IsAmmunition = true; // Mark it as ammunition since we know ItemType says it is
                return props;
            }
            return null;
        }
        catch
        {
            return null;
        }
    }

