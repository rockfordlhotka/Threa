@namespace Threa.Client.Components.Shared
@inherits ActionCostSelectorBase

<div class="action-cost-selector">
    <div class="form-check">
        <input class="form-check-input" type="radio" name="@groupName" id="costOption1_@groupName"
               @onchange="() => SetCostType(ActionCostType.OneAPOneFat)"
               checked="@(SelectedCostType == ActionCostType.OneAPOneFat)"
               disabled="@(IsReadOnly || AP < 1 || Fat < 1)">
        <label class="form-check-label @(AP < 1 || Fat < 1 ? "text-muted" : "")" for="costOption1_@groupName">
            1 AP + 1 FAT
        </label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="@groupName" id="costOption2_@groupName"
               @onchange="() => SetCostType(ActionCostType.TwoAP)"
               checked="@(SelectedCostType == ActionCostType.TwoAP)"
               disabled="@(IsReadOnly || AP < 2)">
        <label class="form-check-label @(AP < 2 ? "text-muted" : "")" for="costOption2_@groupName">
            2 AP
        </label>
    </div>
</div>
