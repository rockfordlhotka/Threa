@* GM modal for instantly reloading an ammo container (no concentration required) *@

@using GameMechanics.Combat
@using Threa.Dal.Dto
@using Radzen

@inject DialogService DialogService

<div class="p-3">
    <div class="card mb-3">
        <div class="card-body">
            <h6 class="card-title">@ContainerName</h6>
            <div class="d-flex gap-3">
                <div>
                    <small class="text-muted">Current</small>
                    <div class="fw-bold">@currentAmmo / @maxCapacity</div>
                </div>
                @if (!string.IsNullOrEmpty(ammoType))
                {
                    <div>
                        <small class="text-muted">Ammo Type</small>
                        <div class="fw-bold">@ammoType</div>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="mb-3">
        <label class="form-label">Set Loaded Ammo: <strong>@newAmmoCount</strong></label>
        <input type="range" class="form-range"
               min="0" max="@maxCapacity"
               @bind="newAmmoCount" @bind:event="oninput" />
        <div class="d-flex justify-content-between text-muted small">
            <span>0 (Empty)</span>
            <span>@maxCapacity (Full)</span>
        </div>
    </div>

    <div class="d-flex gap-2 mb-3">
        <button type="button" class="btn btn-outline-secondary btn-sm" @onclick="SetEmpty">
            Empty
        </button>
        <button type="button" class="btn btn-outline-primary btn-sm" @onclick="SetFull">
            Fill to Max
        </button>
    </div>

    <div class="d-flex justify-content-end gap-2">
        <button type="button" class="btn btn-secondary" @onclick="Cancel">
            Cancel
        </button>
        <button type="button" class="btn btn-primary" @onclick="Confirm">
            <i class="bi bi-box-arrow-in-down me-1"></i>
            Set Ammo
        </button>
    </div>
</div>

@code {
    [Parameter] public CharacterItem? Container { get; set; }
    [Parameter] public string ContainerName { get; set; } = "";
    [Parameter] public int MaxCapacity { get; set; }

    private int currentAmmo;
    private int maxCapacity;
    private string? ammoType;
    private int newAmmoCount;

    protected override void OnParametersSet()
    {
        if (Container != null)
        {
            var state = AmmoContainerState.FromJson(Container.CustomProperties);
            currentAmmo = state.LoadedAmmo;
            maxCapacity = MaxCapacity > 0 ? MaxCapacity : state.MaxCapacity;
            ammoType = state.AmmoType;
            newAmmoCount = currentAmmo;
        }
    }

    private void SetEmpty() => newAmmoCount = 0;
    private void SetFull() => newAmmoCount = maxCapacity;

    private void Cancel() => DialogService.Close(null);

    private void Confirm() => DialogService.Close(newAmmoCount);
}
