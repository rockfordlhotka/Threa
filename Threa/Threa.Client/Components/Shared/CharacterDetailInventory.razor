    private async Task ReloadAmmoContainer(CharacterItem item)
    {
        var template = templates?.GetValueOrDefault(item.ItemTemplateId);
        if (template == null) return;

        var containerProps = AmmoContainerProperties.FromJson(template.CustomProperties);
        var maxCapacity = containerProps?.Capacity ?? 0;

        var result = await DialogService.OpenAsync<GmReloadAmmoContainerModal>(
            "Reload Ammo Container",
            new Dictionary<string, object>
            {
                { "Container", item },
                { "ContainerName", GetItemName(item) },
                { "MaxCapacity", maxCapacity }
            },
            new DialogOptions { Width = "400px", CloseDialogOnOverlayClick = true });

        if (result is int newAmmoCount)
        {
            isProcessing = true;
            ClearFeedback();

            try
            {
                var state = AmmoContainerState.FromJson(item.CustomProperties);
                state.LoadedAmmo = newAmmoCount;
                state.MaxCapacity = maxCapacity;
                if (containerProps != null)
                    state.AmmoType = containerProps.AmmoType;

                item.CustomProperties = state.ToJson();
                await itemDal.UpdateItemAsync(item);

                await timeEventPublisher.PublishCharacterUpdateAsync(new CharacterUpdateMessage
                {
                    CharacterId = CharacterId,
                    UpdateType = CharacterUpdateType.InventoryChanged,
                    CampaignId = TableId.ToString(),
                    SourceId = "GM",
                    Description = $"Set {GetItemName(item)} ammo to {newAmmoCount}/{maxCapacity}"
                });

                ShowFeedback($"Set {GetItemName(item)} to {newAmmoCount}/{maxCapacity} rounds", "alert-success", "bi-check-circle");
                await LoadItemsAsync();
            }
            catch (Exception ex)
            {
                ShowFeedback($"Error: {ex.Message}", "alert-danger", "bi-exclamation-circle");
            }
            finally
            {
                isProcessing = false;
            }
        }
    }

