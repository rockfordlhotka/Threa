@* Item Distribution tab - grant items to the character *@

@using GameMechanics
@using GameMechanics.Messaging
@using Threa.Dal
@using Threa.Dal.Dto

@inject IItemTemplateDal itemTemplateDal
@inject GameMechanics.Items.ItemManagementService itemManagementService
@inject IDataPortal<CharacterEdit> characterPortal
@inject ITimeEventPublisher TimeEventPublisher

<div class="row">
    <div class="col-md-6">
        <div class="card h-100">
            <div class="card-header">
                <strong><i class="bi bi-box-seam me-1"></i>Item Templates</strong>
            </div>
            <div class="card-body">
                <!-- Search and Filter -->
                <div class="mb-3">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search items..."
                               @bind="itemSearchText" @bind:event="oninput" />
                        <select class="form-select" @bind="selectedItemType" style="max-width: 120px;">
                            <option value="">All Types</option>
                            @foreach (var type in itemTypes)
                            {
                                <option value="@type">@type</option>
                            }
                        </select>
                    </div>
                </div>

                <!-- Item List -->
                <div style="max-height: 350px; overflow-y: auto; border: 1px solid #dee2e6; border-radius: 4px;">
                    @if (allTemplates == null)
                    {
                        <div class="text-center p-3">
                            <div class="spinner-border spinner-border-sm text-primary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <span class="ms-2">Loading items...</span>
                        </div>
                    }
                    else if (!filteredTemplates.Any())
                    {
                        <p class="text-muted small p-3 mb-0">No items found.</p>
                    }
                    else
                    {
                        @foreach (var template in filteredTemplates)
                        {
                            <div class="p-2 border-bottom item-row @(selectedTemplate?.Id == template.Id ? "bg-primary text-white" : "")"
                                 style="cursor: pointer;"
                                 @onclick="() => SelectTemplate(template)">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <strong>@template.Name</strong>
                                        <small class="ms-1 @(selectedTemplate?.Id == template.Id ? "" : "text-muted")">
                                            (@template.ItemType)
                                        </small>
                                    </div>
                                    @if (template.IsStackable)
                                    {
                                        <span class="badge bg-secondary" title="Stackable">
                                            <i class="bi bi-layers"></i>
                                        </span>
                                    }
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card h-100">
            <div class="card-header">
                <strong><i class="bi bi-gift me-1"></i>Grant Item</strong>
            </div>
            <div class="card-body">
                @if (selectedTemplate == null)
                {
                    <div class="text-center py-5 text-muted">
                        <i class="bi bi-arrow-left-circle fs-1 opacity-50"></i>
                        <p class="mt-3 mb-0">Select an item from the list to grant it to this character.</p>
                    </div>
                }
                else
                {
                    <div class="mb-3">
                        <h5>@selectedTemplate.Name</h5>
                        <span class="badge bg-secondary">@selectedTemplate.ItemType</span>
                        @if (selectedTemplate.IsStackable)
                        {
                            <span class="badge bg-info ms-1">Stackable</span>
                        }
                    </div>

                    @if (!string.IsNullOrEmpty(selectedTemplate.Description))
                    {
                        <p class="text-muted small">@selectedTemplate.Description</p>
                    }

                    <hr />

                    <div class="mb-3">
                        <label class="form-label">Quantity</label>
                        <div class="input-group" style="max-width: 200px;">
                            <button class="btn btn-outline-secondary" type="button"
                                    @onclick="() => grantQuantity = Math.Max(1, grantQuantity - 1)"
                                    disabled="@(!selectedTemplate.IsStackable || grantQuantity <= 1)">
                                <i class="bi bi-dash"></i>
                            </button>
                            <input type="number" class="form-control text-center" @bind="grantQuantity"
                                   min="1" max="@(selectedTemplate.IsStackable ? 999 : 1)" />
                            <button class="btn btn-outline-secondary" type="button"
                                    @onclick="() => grantQuantity++"
                                    disabled="@(!selectedTemplate.IsStackable)">
                                <i class="bi bi-plus"></i>
                            </button>
                        </div>
                        @if (!selectedTemplate.IsStackable && grantQuantity > 1)
                        {
                            <small class="text-warning">
                                <i class="bi bi-exclamation-triangle me-1"></i>
                                This item is not stackable. Quantity will be 1.
                            </small>
                        }
                    </div>

                    <button class="btn btn-success btn-lg w-100" @onclick="GrantItem" disabled="@isGranting">
                        @if (isGranting)
                        {
                            <span class="spinner-border spinner-border-sm me-1" role="status"></span>
                            <span>Granting...</span>
                        }
                        else
                        {
                            <i class="bi bi-gift me-1"></i>
                            <span>Grant to @Character?.Name</span>
                        }
                    </button>
                }
            </div>
        </div>

        @* Feedback *@
        @if (!string.IsNullOrEmpty(feedbackMessage))
        {
            <div class="alert @feedbackClass mt-3 alert-dismissible fade show" role="alert">
                @feedbackMessage
                <button type="button" class="btn-close" @onclick="() => feedbackMessage = null"></button>
            </div>
        }
    </div>
</div>

@code {
    [Parameter]
    public CharacterEdit? Character { get; set; }

    [Parameter]
    public int CharacterId { get; set; }

    [Parameter]
    public Guid TableId { get; set; }

    [Parameter]
    public EventCallback OnItemGranted { get; set; }

    // Item state
    private List<ItemTemplate>? allTemplates;
    private ItemType? selectedItemType;
    private string itemSearchText = "";
    private ItemTemplate? selectedTemplate;
    private int grantQuantity = 1;
    private bool isGranting;

    // Feedback
    private string? feedbackMessage;
    private string feedbackClass = "alert-success";

    private static readonly ItemType[] itemTypes = Enum.GetValues<ItemType>();

    private IEnumerable<ItemTemplate> filteredTemplates =>
        allTemplates?
            .Where(t => t.IsActive)
            .Where(t => selectedItemType == null || t.ItemType == selectedItemType)
            .Where(t => string.IsNullOrEmpty(itemSearchText) ||
                        t.Name.Contains(itemSearchText, StringComparison.OrdinalIgnoreCase))
            .OrderBy(t => t.Name)
            .Take(50)
        ?? Enumerable.Empty<ItemTemplate>();

    protected override async Task OnInitializedAsync()
    {
        allTemplates = await itemTemplateDal.GetAllTemplatesAsync();
    }

    private void SelectTemplate(ItemTemplate template)
    {
        selectedTemplate = selectedTemplate?.Id == template.Id ? null : template;
        grantQuantity = 1;
    }

    private async Task GrantItem()
    {
        if (selectedTemplate == null || Character == null) return;

        isGranting = true;
        feedbackMessage = null;

        try
        {
            // Fetch fresh character for the update
            var targetCharacter = await characterPortal.FetchAsync(CharacterId);

            // Create the item instance
            var newItem = new CharacterItem
            {
                Id = Guid.NewGuid(),
                ItemTemplateId = selectedTemplate.Id,
                OwnerCharacterId = CharacterId,
                StackSize = selectedTemplate.IsStackable ? grantQuantity : 1,
                CurrentDurability = selectedTemplate.HasDurability ? selectedTemplate.MaxDurability : null,
                CreatedAt = DateTime.UtcNow
            };

            // Add via service (handles effects)
            var result = await itemManagementService.AddItemToInventoryAsync(targetCharacter, newItem);

            if (!result.Success)
            {
                ShowFeedback(result.ErrorMessage ?? "Failed to grant item", "alert-danger");
                return;
            }

            // Notify player to refresh inventory
            await TimeEventPublisher.PublishCharacterUpdateAsync(new CharacterUpdateMessage
            {
                CharacterId = CharacterId,
                UpdateType = CharacterUpdateType.InventoryChanged,
                CampaignId = TableId.ToString(),
                SourceId = "GM",
                Description = $"Granted {(selectedTemplate.IsStackable ? grantQuantity : 1)}x {selectedTemplate.Name}"
            });

            var qty = selectedTemplate.IsStackable ? grantQuantity : 1;
            ShowFeedback($"Granted {qty}x {selectedTemplate.Name}", "alert-success");

            // Reset for next grant
            grantQuantity = 1;
            selectedTemplate = null;

            // Notify parent to refresh
            await OnItemGranted.InvokeAsync();
        }
        catch (Exception ex)
        {
            ShowFeedback($"Error: {ex.Message}", "alert-danger");
        }
        finally
        {
            isGranting = false;
        }
    }

    private void ShowFeedback(string message, string alertClass)
    {
        feedbackMessage = message;
        feedbackClass = alertClass;
    }
}
